<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ativação do Produto"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtReqLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código de solicitação (REQ:)"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REQ:..."
            android:textSize="13sp"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:textIsSelectable="true"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnCopyRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copiar REQ"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:backgroundTint="@color/white"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtLicLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código de ativação (LIC:)"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:id="@+id/edtLicense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cole aqui: LIC:...."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="6"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"/>

        <Button
            android:id="@+id/btnActivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ativar"
            android:layout_marginTop="12dp"
            android:background="#000000"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/txtFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A licença é vinculada ao seu dispositivo. Em caso de troca de aparelho, será necessária uma nova ativação."
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>