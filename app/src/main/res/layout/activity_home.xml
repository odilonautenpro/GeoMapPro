<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="0dp">

    <VideoView
        android:id="@+id/globo_terrestre"
        android:layout_width="1000dp"
        android:layout_height="1000dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GeoMap Pro"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <ImageView
        android:id="@+id/logo_auten"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo_auten" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCarregar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btnCarregar"
            android:padding="12dp"
            android:text="Carregar Trabalho"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_dialog_dialer"
            app:iconTint="#666666" />

        <Button
            android:id="@+id/btnNovo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btnNovo"
            android:padding="12dp"
            android:text="Novo Trabalho"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconTint="#666666" />

        <Button
            android:id="@+id/btnAjustes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:onClick="btnAjustes"
            android:padding="12dp"
            android:text="Ajustes"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:icon="@android:drawable/ic_menu_manage"
            app:iconTint="#000000" />
    </LinearLayout>

</RelativeLayout>
